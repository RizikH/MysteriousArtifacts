article.cart-item(data-product-id=product.product_id)
  button.remove-item-button(aria-label="Remove item") âœ•
  img.cart-item-image(src=product.product_image_url, alt=product.product_name)
  section.cart-item-details
    h3.cart-item-name #{product.product_name}
    if product.product_description
      p.cart-item-description #{product.product_description}
  section.cart-item-quantity
    form.decrease-quantity-form(action="/MysteriousArtifacts/cart/update" method="POST")
      input(type="hidden" name="product_id" value=product.product_id)
      input(type="hidden" name="action" value="decrease")
      input(type="hidden" name="quantity" value=product.cart_product_quantity)
      button.quantity-button(aria-label="Decrease quantity", type="submit") -
    span.cart-item-quantity(aria-label=`Quantity of ${product.product_name}`) #{product.cart_product_quantity}
    form.increase-quantity-form(action="/MysteriousArtifacts/cart/update" method="POST")
      input(type="hidden" name="product_id" value=product.product_id)
      input(type="hidden" name="action" value="increase")
      input(type="hidden" name="quantity" value=product.cart_product_quantity)
      button.quantity-button(aria-label="Increase quantity", type="submit") +
  p.cart-item-price $#{product.product_price.toFixed(2)}
