extends partials/layout

block layout-content
  main.products
    nav.admin-nav
      ul
        li
          a(href="/MysteriousArtifacts/admin/products") Admin Products
        li
          a(href="/MysteriousArtifacts/admin/upload") Admin Upload
        li
          a(href="/auth/logout") Sign Out
    section.content-box
      section.filter-container
        input#searchInput(type="text" placeholder="Search products by name...")
        button#search-btn Search
        
        button#add-product-btn(style='display: block') Add New Product

        form.addProductForm(action="/MysteriousArtifacts/admin/products/add" method="post" style="display: none")
          label(for="category_id") Category ID:
          input(type="text" name="category_id" id="category_id", required)

          label(for="product_name") Product Name:
          input(type="text" name="product_name" id="product_name", required)

          label(for="product_description") Product Description:
          textarea(name="product_description" id="product_description", required)

          label(for="product_image_url") Product Image URL:
          input(type="url" name="product_image_url" id="product_image_url", required)

          label(for="product_price") Product Price:
          input(type="number" step="0.01" name="product_price" id="product_price", required)

          button(type="submit") Add Product


      table.product-table
        thead
          tr
            th Product ID
            th Name
            th Description
            th Category
            th Image
            th Price
            th#actions-column Actions
        tbody#productList
          each product in products 
            include partials/product.pug
